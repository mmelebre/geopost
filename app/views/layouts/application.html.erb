<!DOCTYPE html>
<html>
<head>
  <title>Geopost</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>


	<header>
		<%= link_to "Home", root_path %>
		<%= link_to "Tell us a story", new_post_path %>
		<%= link_to "Recent", root_path %>
		<%= link_to "Featured", root_path(featured: true) %>
		<%= link_to "Published", root_path(published: true) %>




	</header>	

	<% flash.each do |key, value| %>	

		<div class="<%= key %>">
			<p><%= value %></p>
		</div>
			
	<% end %>

	<%= yield %>

</body>
</html>
